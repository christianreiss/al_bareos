#! /bin/bash

HN="`echo $1 | awk -F\"-fd\" ' { print $1 } '`"
EXIT="$2"

if [ "${EXIT}" == "OK" ] ; then
    /bin/echo "${HN};bareos: backup;0;Backup completed (`date +%H:%M:%S`)" | /usr/sbin/send_nsca -H <%= scope.lookupvar('::icinga::client::monitoring_server')%> -c <%= scope.lookupvar('::icinga::client::send_nsca_config')%> -d ';'
else
    /bin/echo "${HN};bareos: backup;2;Backup failed @ `date +%H:%M:%S` with ${EXIT}!" | /usr/sbin/send_nsca -H <%= scope.lookupvar('::icinga::client::monitoring_server')%> -c <%= scope.lookupvar('::icinga::client::send_nsca_config')%> -d ';'
fi
